<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/shadow_with_rounded_corners.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="2dp" />
            <solid android:color="#20CCCCCC" />
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#33000000"
                android:endColor="#10000000"
                android:angle="90" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <padding
                android:left="30dp"
                android:top="10dp"
                android:right="30dp"
                android:bottom="10dp" />
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>