<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Admin.AdminAddEmployee">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primaryColor"
            android:id="@+id/toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Employee"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/toolbar"
            android:background="@color/primaryColor"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fullName_TextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Full Name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:boxStrokeColor="@color/primaryColor"
                    app:boxStrokeErrorColor="#FF0000"
                    app:helperTextTextColor="#FF0000"
                    app:counterTextColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    app:errorEnabled="true"
                    tools:ignore="HardcodedText,MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fullName_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_employee"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneNumber_TextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Phone Number"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:boxStrokeColor="@color/primaryColor"
                    app:boxStrokeErrorColor="#FF0000"
                    app:helperTextTextColor="#FF0000"
                    app:counterTextColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    app:errorEnabled="true"
                    tools:ignore="HardcodedText,MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneNumber_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_phonenumber"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawablePadding="10dp"
                        android:inputType="number"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/empNumber_TextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Employee Number"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:boxStrokeColor="@color/primaryColor"
                    app:boxStrokeErrorColor="#FF0000"
                    app:counterTextColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    app:helperTextTextColor="#FF0000"
                    app:errorEnabled="true"
                    tools:ignore="HardcodedText,MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/empNumber_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_employeenumber"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/position_TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="Select Position"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    tools:ignore="HardcodedText">

                    <AutoCompleteTextView
                        android:id="@+id/position_AutoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawableStart="@drawable/ic_position"
                        android:drawablePadding="10dp"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/birthday_TextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:endIconMode="custom"
                    app:boxStrokeColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    app:endIconDrawable="@drawable/ic_date_picker"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/birthday_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Birthdate"
                        android:textColor="@color/black"
                        android:drawablePadding="10dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/poppinsmedium"
                        tools:ignore="HardcodedText" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_TextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:boxStrokeColor="@color/primaryColor"
                    app:boxStrokeErrorColor="#FF0000"
                    app:counterTextColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    app:errorEnabled="true"
                    tools:ignore="HardcodedText,MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_email"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_TextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Create Password"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:endIconMode="password_toggle"
                    app:boxStrokeColor="@color/primaryColor"
                    app:boxStrokeErrorColor="#FF0000"
                    app:counterTextColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    app:errorEnabled="true"
                    tools:ignore="HardcodedText,MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_password"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawablePadding="10dp"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPassword_TextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Confirm Password"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:endIconMode="password_toggle"
                    app:boxStrokeColor="@color/primaryColor"
                    app:boxStrokeErrorColor="#FF0000"
                    app:counterTextColor="@color/primaryColor"
                    app:hintTextColor="@color/primaryColor"
                    app:errorEnabled="true"
                    tools:ignore="HardcodedText,MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPassword_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_password"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawablePadding="10dp"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/add_Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@color/primaryColor"
                        android:text="Add"
                        android:fontFamily="@font/poppinsbold"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        tools:ignore="HardcodedText" />

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressbar"
                        android:indeterminateTint="@color/primaryColor"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>