<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/edit_ImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_edit_24"
            app:tint="@color/primaryColor"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fullName_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fullname: JOm"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/employeeNumAndPosition_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-2020 | Labor"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/period_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period: December 26 - January 10"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>